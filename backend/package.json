{
  "name": "tuesday-backend",
  "version": "1.0.0",
  "description": "Tuesday - Self-hosted project management tool backend",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify src/index.ts --outfile tuesday",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.5",
    "bcryptjs": "^2.4.3",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  }
}
